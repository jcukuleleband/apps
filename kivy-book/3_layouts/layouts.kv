#:kivy 1.10.0
<MyGridLayout>:
    rows: 2
    FloatLayout:
        Button:
            text: 'F1'
            size_hint: 0.3, 0.3
            pos: 0,0
    RelativeLayout:
        Button:
            text: 'R1'
            size_hint: 0.3, 0.3
            pos: 0,0
    GridLayout:
        cols: 2
        spacing: 10
        Button:
            text: 'G1'
            size_hint_x: None
            width: 50
        Button:
            text: 'G2'
        Button:
            text: 'G3'
            size_hint_x: None
            width: 50
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            text: 'A1'
            size_hint: 0.5, 0.5
        Button:
            text: 'A2'
            size_hint: 0.2, 0.2
    BoxLayout:
        orientation:'horizontal'
        Button:
            text: 'B1'
        Label:
            text: 'B2'
            color: 0.8, 0.9, 0, 1
            font_size: 32
            size_hint: 2, 0.3
            pos_hint: {'y': 0.4 }
        Button:
            text: 'B3'
    StackLayout:
        orientation: 'rl-tb'
        padding: 10
        Button:
            text: 'S1'
            size_hint: 0.6, 0.2
        Button:
            text: 'S2'
            size_hint: 0.4, 0.4
        Button:
            text: 'S3'
            size_hint: 0.3, 0.1
        Button:
            text: 'S4'
            size_hint: 0.4, 0.3
